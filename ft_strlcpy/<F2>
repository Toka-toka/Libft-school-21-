# include <bsd/string.h>
# include <stdio.h>
# include <unistd.h>

void    ft_strlcpy(void *dest, const void *src, size_t n);

int main (void)
{
	int i = 0;
	char src[] = "1234567";
	char dest[] = "00000";
	size_t n = 7;
	size_t a = 0;
	a = strlcpy(dest, src, n);
	printf("a = %ld\n", a);
	while (i < 10)
	{
		write (1, &dest[i], 1);
		i++;
	}	
	return (0); 
}
